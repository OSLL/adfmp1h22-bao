<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <Button
            android:id="@+id/button21"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button22"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button23"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button24"
            style="@style/Game.SquareButton" />

        <Button
            android:id="@+id/button25"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button26"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button27"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button28"
            style="@style/Game.RoundButton" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button31"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button32"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button33"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button34"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button35"
            style="@style/Game.SquareButton" />

        <Button
            android:id="@+id/button36"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button37"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button38"
            style="@style/Game.RoundButton" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/hand1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button41"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button42"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button43"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button44"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button45"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button46"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button47"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button48"
            style="@style/Game.RoundButton" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hand2">

        <Button
            android:id="@+id/button11"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button12"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button13"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button14"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button15"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button16"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button17"
            style="@style/Game.RoundButton" />

        <Button
            android:id="@+id/button18"
            style="@style/Game.RoundButton" />

    </LinearLayout>

    <TextView
        android:id="@+id/hand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/endTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:text="End turn"
        app:layout_constraintBottom_toBottomOf="@+id/statusView"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusView"
        android:layout_width="169dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="75dp"
        android:gravity="clip_horizontal|center|clip_vertical|center_horizontal|center_vertical"
        android:text="HEHE"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>